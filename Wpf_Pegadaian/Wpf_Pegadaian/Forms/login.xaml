<Window x:Class="Wpf_Pegadaian.Forms.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Pegadaian.Forms"
        mc:Ignorable="d"
        Title="login" Height="300" Width="609.5" WindowStartupLocation="CenterScreen">
    <Grid Background="#FFCEEDF9">
        <Label x:Name="label" Content="Username" HorizontalAlignment="Left" Margin="287,61,0,0" VerticalAlignment="Top" FontFamily="Simplified Arabic Fixed" FontSize="16" Foreground="#FF024002" FontWeight="Bold"/>
        <Label x:Name="label_Copy" Content="Password" HorizontalAlignment="Left" Margin="287,141,0,0" VerticalAlignment="Top" FontFamily="Simplified Arabic Fixed" FontSize="16" Foreground="#FF024002" FontWeight="Bold"/>
        <Label x:Name="label_Copy1" Content="Roles" HorizontalAlignment="Left" Margin="287,101,0,0" VerticalAlignment="Top" FontFamily="Simplified Arabic Fixed" FontSize="16" Foreground="#FF024002" FontWeight="Bold"/>
        <TextBox x:Name="username" HorizontalAlignment="Left" Height="29" Margin="408,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="154" BorderThickness="2,1,4,2" Background="#FFF3F3F3">
            <TextBox.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </TextBox.BorderBrush>
        </TextBox>
        <ComboBox x:Name="croles" HorizontalAlignment="Left" Margin="408,101,0,0" VerticalAlignment="Top" Width="154" Opacity="0.9" Height="29">
            <ComboBoxItem Content="Admin"/>
            <ComboBoxItem Content="User"/>
        </ComboBox>
        <DockPanel HorizontalAlignment="Left" Height="52" LastChildFill="False" VerticalAlignment="Top" Width="602">
            <DockPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF27FD06" Offset="1"/>
                </LinearGradientBrush>
            </DockPanel.Background>
        </DockPanel>
        <PasswordBox x:Name="password" HorizontalAlignment="Left" Margin="408,141,0,0" VerticalAlignment="Top" Width="154" Height="26" CaretBrush="#FF040000" Background="White" SelectionBrush="{x:Null}">
            <PasswordBox.BorderBrush>
                <LinearGradientBrush EndPoint="0,20" MappingMode="Absolute" StartPoint="0,0">
                    <GradientStop Color="#FFABADB3" Offset="0.05"/>
                    <GradientStop Color="#FFE2E3EA" Offset="0.07"/>
                    <GradientStop Color="#FF1A2591" Offset="1"/>
                </LinearGradientBrush>
            </PasswordBox.BorderBrush>
        </PasswordBox>
        <DockPanel HorizontalAlignment="Left" Height="52" LastChildFill="False" Margin="0,217,0,0" VerticalAlignment="Top" Width="602">
            <DockPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF3FFF15" Offset="1"/>
                </LinearGradientBrush>
            </DockPanel.Background>
        </DockPanel>
        <Button x:Name="button" Content="LOGIN" HorizontalAlignment="Left" VerticalAlignment="Top" Width="87" Margin="474,177,0,0" Click="button_Click" Background="#FF0E50B2" FontWeight="Bold" FontSize="13.333" Height="35" Foreground="White"/>
        <Label x:Name="label1" Content="PEGADAIAN" HorizontalAlignment="Left" Margin="14,96,0,0" VerticalAlignment="Top" Width="245" Height="46" Foreground="#FF006613" FontSize="34.667" FontFamily="Cooper Black"/>

    </Grid>
</Window>
